<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.open.widgets.recyclerview.IRecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:animationCache="false"
        android:background="#fbfbfb"
        android:drawSelectorOnTop="false"
        android:scrollingCache="false"
        android:smoothScrollbar="true"
        android:divider="#e9e9e9"
        android:dividerHeight="2px"
        android:headerDividersEnabled="false"

        app:recyclerview_pull_capacity="PULL_DOWN|AUTO_PULLUP"
        app:recyclerview_pull_header_classname="com.open.widgets.listview.IListViewHeader"
        app:recyclerview_pull_emptyer_classname="com.open.widgets.listview.IListViewEmptyer"
        app:recyclerview_pull_footer_classname="com.open.widgets.listview.IListViewFooter" />

    <TextView
        android:id="@+id/linear"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/bg_corner"
        android:textColor="#FFFFFFFF"
        android:text="LinearLayout 0"/>

    <TextView
        android:id="@+id/grid"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/bg_corner"
        android:textColor="#FFFFFFFF"
        android:text="GridLayout 0"/>

    <TextView
        android:id="@+id/staggeredGrid"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/bg_corner"
        android:textColor="#FFFFFFFF"
        android:text="StaggeredGridLayout 0"/>

</FrameLayout>

